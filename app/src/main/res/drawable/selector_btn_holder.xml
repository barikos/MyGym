<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/main_yellow_pressed"/>
            <corners android:radius="@dimen/day_dialog_corner"/>
            <padding android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/main_yellow_default"/>
            <corners android:radius="@dimen/day_dialog_corner"/>
            <padding android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
</selector>