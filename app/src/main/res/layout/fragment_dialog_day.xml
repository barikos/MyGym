<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_day_dialog"
    android:layout_marginLeft="@dimen/day_dialog_corner"
    android:layout_marginRight="@dimen/day_dialog_corner">

    <TextView
        android:id="@+id/txt_dialog_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_global"
        android:textSize="@dimen/txt_grid_item"/>

    <ImageView
        android:id="@+id/img_dialog_day_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_below="@id/txt_dialog_day"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/img_dialog_day_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel"
        android:layout_below="@id/txt_dialog_day"
        android:layout_alignParentRight="true"
        android:clickable="true"/>

</RelativeLayout>