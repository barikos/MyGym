<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darker_grey">

    <ImageView
        android:id="@+id/img_toolbar_back"
        android:layout_width="@dimen/img_toolbar"
        android:layout_height="@dimen/img_toolbar"
        android:layout_gravity="left"
        tools:src="@drawable/ic_back"/>

    <TextView
        android:id="@+id/txt_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_global"
        android:textSize="20sp"
        tools:text="GGG"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/img_toolbar_add"
        android:layout_width="@dimen/img_toolbar"
        android:layout_height="@dimen/img_toolbar"
        tools:src="@drawable/ic_add"
        android:layout_gravity="right"/>

</android.support.v7.widget.Toolbar>